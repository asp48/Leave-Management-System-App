<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="225dp"
    android:padding="15dp"
    tools:context="com.example.amit.leave1.Statistics">

    <TableLayout
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:padding="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_weight="0.1"
                android:layout_marginRight="1dp"
                android:textColor="#ff231368"
                android:text="SL\nNo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:gravity="center"
                android:textSize="13dp"
                android:layout_weight="0.3"
                android:layout_marginRight="1dp"
                android:textColor="#ff231368"
                android:text="Type of\n Leave" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:textSize="13dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="#ff231368"
                android:text="Maximum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_marginRight="1dp"
                android:textSize="13dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="#ff231368"
                android:text="Applied" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:textSize="13dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="#ff231368"
                android:text="Remaining" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="1"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_weight="0.1"
                android:layout_marginRight="1dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="Casual\nLeave"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_marginRight="1dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="12"
                android:textSize="13dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:id="@+id/clapplied"
                android:textSize="13dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:id="@+id/clremain"
                android:textSize="13dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:paddingBottom="1dp"
            android:paddingRight="1dp"
            android:paddingLeft="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_weight="0.1"
                android:layout_marginRight="1dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="Restricted\nHoliday"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_marginRight="1dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="2"
                android:textSize="13dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:id="@+id/rlapplied"
                android:textSize="13dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:id="@+id/rlremain"
                android:textSize="13dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="3"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_weight="0.1"
                android:layout_marginRight="1dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:text="Earned\nLeave"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_marginRight="1dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:id="@+id/elm"
                android:textSize="13dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.2"
                android:text="-----"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:id="@+id/ela"
                android:textSize="13dp"
                android:layout_marginRight="1dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="-----"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:id="@+id/elr"
                android:textSize="13dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@android:color/black" />


        </TableRow>
    </TableLayout>
</RelativeLayout>
